language: csharp
sudo: required
dist: trusty
solution: TestTrafisCiCSharp.sln

install:
  - travis_retry nuget restore -source "https://www.nuget.org/api/v2" ./TestTrafisCiCSharp.sln
  - sudo nuget update -self
  - sudo nuget restore TestTrafisCiCSharp.sln
  - sudo nuget install NUnit.ConsoleRunner -Version 3.7.0

script:
  - sudo msbuild ./TestTrafisCiCSharp.sln
  - sudo mono ./packages/NUnit.ConsoleRunner.3.7.0/tools/nunit3-console.exe ./UnitTestProject1/bin/Debug/UnitTestProject1.dll
